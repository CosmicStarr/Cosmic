@model CosmicWeb.Models.ViewModels.IndexViewModel


<div class="container">
    <div class="row pb-4 backgroundWhite">
        @foreach (var item in Model.CosmicSpotsLists)
        {
            <div class="container backgroundWhite pb-4">
                <div class="card border">
                    <div class="card-header bg-dark text-light ml-0 row container">
                        <div class="col-12 col-md-6">
                            <h1 class="text-warning">@item.Name</h1>
                        </div>
                        <div class="col-12 col-md-6 text-md-right">
                            <h1 class="text-warning">State : @item.State</h1>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="container rounded p-2">
                            <div class="row">
                                <div class="col-12 col-lg-8">
                                    <div class="row">
                                        <div class="col-12">
                                            <h3 style="color:#bbb9b9">Established: @item.Established.Year</h3>
                                        </div>
                                        <div class="col-12">
                                            @if (Model.DirectionsLists.Where(w => w.CosmicSpotId == item.Id).Count() > 0)
                                            {
                                                <table class="table table-striped" style="border:1px solid #808080 ">
                                                    <tr class="table-secondary">
                                                        <th>
                                                            Trail
                                                        </th>
                                                        <th>Distance</th>
                                                        <th>Elevation Gain</th>
                                                        <th>Difficulty</th>
                                                    </tr>
                                                    @foreach (var direct in Model.DirectionsLists.Where(w =>w.CosmicSpotId == item.Id))
                                                    {
                                                    <tr class="table-secondary">
                                                        <td>@direct.Name</td>
                                                        <td>@direct.Distance</td>
                                                        <td>@direct.Elevation Ft</td>
                                                        <td>@direct.Difficulty</td>
                                                    </tr>

                                                    }
                                                </table>
                                            }
                                            else
                                            {
                                                <p>No Spots Exist!</p>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-4 text-center">
                                    <img src="https://via.placeholder.com/150" class="card-img-top p-2 rounded" width="100" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>