@model CosmicWeb.Models.ViewModels.CosmicSpotVM
@{ 
    var title = "Create Directions";
}

<form method="post" asp-action="Upsert" >

    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Directions.Id != 0)
        {
            <input type="hidden" asp-for="Directions.Id" />
            title = "Edit Distance";
        }
        <div class="col-12 p-3">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Directions.Name"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Directions.CosmicSpotId, Model.CosmicSpotDropDown, "-Choose a Spot- ", new { @class = "form-control" })
                    <span asp-validation-for="Directions.CosmicSpotId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Directions.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Directions.Name" class="form-control" />
                    <span asp-validation-for="Directions.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Directions.Difficulty"></label>
                </div>
                <div class="col-8">
                    <select asp-for="Directions.Difficulty" asp-items="Html.GetEnumSelectList<Directions.DifficultyType>()" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Directions.Distance"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Directions.Distance" class="form-control" />
                    <span asp-validation-for="Directions.Distance" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Directions.Elevation"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Directions.Elevation" class="form-control" />
                    <span asp-validation-for="Directions.Elevation" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-4">
                    <button type="submit" class="btn btn-primary form-control">@(Model.Directions.Id!=0?"Update":"Create")</button>
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </div>
    </div>

</form>

